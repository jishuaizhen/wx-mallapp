/* pages/home/home.wxss */
/* 头部搜索框 */
.search {
  height: 60rpx;
  background: #EDEDED;
  width: 90%;
  margin:0px auto;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.search text {
  font-size: 28rpx;
  color: #666;
}
/* 轮播图 */
.case {
  margin-top: 20rpx;
  height: 417rpx;
}
.case swiper {
  height: 100%;
}
.case image {
  width: 100%;
  height: 100%;
}
/* 分类 */
.category{
  display: flex;
  width: 100%;
}
.category view{
  display: flex;
  flex-direction: column;
  width: 25%;
  height: 110rpx;
  align-items: center;
  text-align: center;
  font-size:28rpx;
  margin:30rpx 0;
}
.category view image{
  width: 30%;
  height: 45%;
}
.ad image{
  width:100%;
  height: 250rpx;
}
/* 品牌直供 */
.product{
  width: 100%;
  height: auto;
}
.title{
  width: 100%;
  height:140rpx;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.prolist{
  display:flex;
  width: 100%;
  flex-wrap:wrap;
}
.prolist .pro{
  width: 50%;
  height: 270rpx;
  display: flex;
  flex-direction: column;
  background-size: 100%;
}
.prolist .pro .zz{
  font-size:36rpx;
  margin:20rpx;
}
.prolist .pro .price{
  font-size: 28rpx;
  margin:0 20rpx;
}
/* 新品首发 */
.prolist .pro1{
  width: 50%;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  background-size: 100%;
  box-sizing: border-box;
  border:1px solid rgb(245, 245, 245);
}
.pro1 navigator{
  display: block;
  width: 100%;
  height:100%;
}
.pro1 image{
  width: 70%;
  height: 70%;
  margin:0rpx 50rpx;
}
.pro1 view{
  height: 30%;
  display: flex;
  flex-direction: column;
}
.pro1 .name{
  font-size: 30rpx;
  color: #333;
  width: 90%;
  margin:0px auto;
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center
}
.pro1 .price {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #b4282d;
}
/* 更多好物 */
.more{
  width: 100%;
}
.item-more{
  width: 50%;
  height: 320rpx;
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: center; 
  border:2px solid rgb(245, 245, 245);
  box-sizing: border-box;
}
/* 弹出登录层 */
.login {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 350rpx;
  background: white;
  width: 70%;
}

.login .top {
  display: flex;
  flex-direction: column;
}

.login .top .title {
  font-size: 40rpx;
  text-align: center;
  margin-top: 16rpx;
}

.login .top .content {
  font-size: 32rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}

.bottom {
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.bottom button {
  flex:1;
}