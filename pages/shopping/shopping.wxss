/* pages/shopping/shopping.wxss */
.shopping{
  width: 100%;
  height:100%;
  background: #F7F7FA;
}
.top{
  width: 100%;
  height: 100rpx;
  display: flex;
}
.top view{
  display: inline-block;
  font-size: 30rpx;
  line-height: 100rpx;
  width: 33%;
  height: 100rpx;
  text-align: center;
}
.shop{
  display: flex;
  width: 100%;
  height: 160rpx;
  background: white;
  border-bottom:2px solid #F7F7FA;
  padding: 30rpx;
  position: relative;
}
.select{
  width: 8%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.select icon{
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border:1px solid #999;
}
.shop image{
  width: 16%;
  height: 80%;
  padding: 20rpx 0;
}
.shop .info{
  width: 65%;
  height: 100%;
  padding-left: 10rpx;
}
.shop .info view{
  height: 50rpx;
  line-height: 50rpx;
}
.shop .info .text1{
  font-size:28rpx;
}
.shop .info .text2{
  font-size:24rpx;
  color:#999;
}
.shop .info .text3{
  font-size:28rpx;
}
.shop .num{
  position: absolute;
  height: 100%;
  width: 40%;
  top:0;
  right:0;
}
.num .icon{
  position: absolute;
  top: 30rpx;
  right: 100rpx;
}
.num .btn{
  position: absolute;
  bottom: 30rpx;
  right: 80rpx;
  display: flex;
}
.btn view{
  height: 52rpx;
  width: 70rpx;
  border:1px solid #999;
  text-align: center;
} 
.btn .input{
  display: block;
  width: 50rpx;
  border:1px solid #999;
  font-size: 24rpx;
  text-align: center;
} 
/* 底部 */
.footer{
  height: 100rpx;
  width: 100%;
  position: absolute;
  left: 0;
  bottom:0;
  background: #F7F7FA;
  display: flex;
  justify-content: space-between;
}
.footer .select{
  width: 20%;
  height: 100%;
  font-size:32rpx;
}
.footer .select icon{
  margin-right:20rpx;
}
.footer .order{
  font-size: 32rpx;
  width: 30%;
  height: 100%;
  line-height: 100rpx;
  background: #B4282D;
  color: white;
  text-align: center;
}
.active{
  background: #B4282D;
}